- if grid.html_columns(*options[:columns]).any?
  - options[:html][:class] = 'table table-striped'
  = content_tag :table, options[:html] do
    %thead
      = datagrid_header(grid, options)
    %tbody
      - if assets.any?
        = datagrid_rows(grid, assets, options)
      - else
        %tr
          %td.noresults{:colspan => "100%"}= t('datagrid.no_results').html_safe
- else
  = t("datagrid.table.no_columns").html_safe
